{
  "mcpServers": {
    "ipc": {
      "command": "npx",
      "args": ["-y", "claude-ipc-mcp", "--secret", "$IPC_SHARED_SECRET"],
      "env":  { "IPC_SHARED_SECRET": "$IPC_SHARED_SECRET" }
    },
    "cmd": {
      "command": "npx",
      "args": ["-y", "mcp-server-commands"],
      "env":  { "ALLOWED_COMMANDS": "git", "IPC_SHARED_SECRET": "$IPC_SHARED_SECRET" }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env":  { "GITHUB_TOKEN": "$GITHUB_TOKEN", "IPC_SHARED_SECRET": "$IPC_SHARED_SECRET" }
    }
  }
}